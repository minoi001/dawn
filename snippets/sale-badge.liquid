{% comment %}
  Renders product variant options

  Accepts:
  - product: {Object} Product Liquid object (optional)
  - use_variant: {Boolean} Renders selected or first variant price instead of overall product pricing (optional)

  Usage:
  {% render 'sale-badge',
    product: product,
    use_variant: boolean,
  %}
{% endcomment %}

{%- liquid
  if use_variant
    assign target = product.selected_or_first_available_variant
  else
    assign target = product
  endif

  assign compare_at_price = target.compare_at_price
  assign price = target.price
  assign available = target.available
-%}

<div id="{{ target.id }}" class="price-container">
  {%- if compare_at_price > price and available -%}
    <span class="sale-badge">On Sale</span>
  {%- else -%}
    <span class="sale-badge-placeholder"></span>
  {%- endif -%}
</div>

<style>
  /* General Container Styling */
  .price-container {
    display: inline-block;
    margin: 10px 0;
    font-family: Arial, sans-serif;
    font-size: 16px;
    font-weight: 400;
    text-align: center;
  }

  /* Sale Badge Styling */
  .sale-badge {
    display: inline-block;
    background-color: #e63946; /* Modern red for sale */
    color: #ffffff; /* White text for contrast */
    padding: 5px 10px;
    border-radius: 20px; /* Rounded badge */
    font-size: 14px;
    font-weight: bold;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15); /* Subtle shadow */
  }

  /* Placeholder for Consistent Line Height */
  .sale-badge-placeholder {
    display: inline-block;
    visibility: hidden; /* Invisible but takes up space */
    padding: 5px 10px; /* Matches badge padding */
    font-size: 14px; /* Matches badge font size */
    line-height: 1; /* Matches badge line height */
  }
</style>